bg-icon($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio 3), (min-device-pixel-ratio 3)
    background-image url($url + "@3x.png")

ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

border-bottom()
  .border-bottom
    &:before
      border-color rgba(7,17,27,0.1)
      border-width 2px
